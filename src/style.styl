body
    --bg-color #fff
    --text-color #222
    --note-color #000
    --notation-line-color #C8C8C8
    --notation-bg-color #0033cc
    --primary-color-regular #FF5D8E

    &.dark-theme
        --bg-color: #1F1B2B
        --text-color #fff
        --note-color #fff
        --notation-line-color #C8C8C8
        --notation-bg-color #0033cc
        --primary-color-regular #FF705D

html, body
    height 100%
    width 100%
    overflow-x hidden
    background-color --bg-color
    

h1
h2
h3
h4
h5
h6
p
a
    font-family: 'Poppins', sans-serif;
    color $text-color
    // &::selection
    //     background-color #F3F3F3
    //     color $blue
    //     text-decoration underline
    //     -webkit-tap-highlight-color rgba(0,0,0,0)

.song-card
    position relative
    margin 0 auto
    display block
    width 100%
    // +desktop()
    max-width 640px
    height 172px

    .song-name
        position relative
        top 36px
        left 24px
        font-size 20px

    .btn-play
        font-weight: 700
        position absolute
        top 37px
        right 16px
        height 24px
        width 74px
        background --primary-color-regular
        color white
        border-radius 40px
        border none
        
    .measure
        width 100%
        height 88px
        display grid
        grid-template-columns repeat(8, 1fr);

    .notation-frame
        display grid
        grid-template-columns repeat(2, 1fr);
        column-gap: 16px;
        position absolute
        padding 0 16px
        top 74px
        width 100%
        height 88px
        background --notation-bg-color
        &:hover
            cursor pointer
        &.active
            background: #FAF0F3;
        &.active:after
            content: '';
            display: block;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            border: 2px solid --primary-color-regular;
            +desktop()
                border-radius: 5px;
            +tablet()
                border-radius: 0px;
                border-right none
                border-left none
        +tablet()
            border-radius 0
        +desktop()
            border-radius 10px
            
        .highlighted
            background: #FAF0F3;
            :after
                content: '';
                display: block;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                border-radius: 5px;
                border: 2px solid --primary-color-regular;

    .notation-note
        position relative
        align-items center
        align-self center
        width 100%
        height 100%

    .notation-horizontal-line
        position absolute
        height 1px
        width 100%
        background --notation-line-color
        top 50%
        align-items center
        align-self center
    
    .notation-vertical-line
        position absolute
        height 50%
        width 4%
        top 25%
        left 48%
        background --notation-line-color
        &.active
            background --primary-color-regular

    .notation-note-circle
        position relative
        width 15px
        height 15px
        border-radius 50px
        background $text-color
        margin 0 auto
        // box-shadow: 0 0 1px 0px white inset

    .Dun
        top 66%
    .Gun
        top 66%
    .do
        top 42%
    .go
        top 42%
    .Ta
        top 18%
    .Pa
        top 18%
    .Ca
        top 18%
        background --notation-bg-color
        border 2px solid $text-color
        &::after
            content ""
            width 3px
            height 3px
            left 4px
            top 4px
            position absolute
            background $text-color
            border-radius 50px
    .xx
        display none

.active .Ca
    background #FAF0F3


.logo
    *
        transition width .5s, margin .5s, top .5s, left .5s
    +tablet()
        margin-top 60px
        margin-bottom 16px
    +desktop()
        margin-top 120px
        margin-bottom 40px



.logotype
    text-align center
    +desktop()
        margin 40px auto 0px
    +tablet()
        margin 20px auto 0px
        width 200px
        height auto
    svg 
        +tablet()
            width 200px
.logomark
    display block
    text-align center
    display grid
    grid-template-columns repeat(4,1fr)
    grid-column-gap 4% 
    background --primary-color-regular
    +desktop()
        padding 16px
        margin 0 auto 
        width 168px
        height 108px
        border-radius 35px
    +tablet()
        padding 10px
        margin 0 auto
        width 108px
        height 68px
        border-radius 20px
    &:hover
        cursor pointer

    .logomark-note
        // width 16px
        // height 16px
        width 100%
        padding-top 100%
        border-radius 100%
        justify-self center
        &.Dun
            background --bg-color
            align-self end
        &.Gun
            background --bg-color
            align-self end
        &.Ca
            // outline  4px solid --bg-color
            position relative
            background --primary-color-regular
            align-self start
            +desktop()
                box-shadow: inset 0 0 0 4px --bg-color;
            +tablet()
                box-shadow: inset 0 0 0 3px --bg-color;
            &::after
                content ""
                position absolute
                display block
                background --bg-color
                border-radius 100%
                +desktop()
                    top 33%
                    left 33%
                    width 10px
                    height 10px
                +tablet()
                    top 35%
                    left 35%
                    width 5px
                    height 5px


