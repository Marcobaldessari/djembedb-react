@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

// Media queries mixins
desktop()
    @media (min-width: 640px)
        {block}
tablet()
    @media (max-width: 639px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}

// Color tokens
$main-color = #FF5D8E
$grey-bg = #F7F7F7
$text-color = #000
// $notation-line = #BDBDBD
$notation-line = #C8C8C8
$bg = #fff

// // Dark theme
// $main-color = #FF5D8E
