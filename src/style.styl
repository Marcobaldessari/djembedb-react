@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

// Media queries mixins
desktop()
    @media (min-width: 640px)
        {block}
tablet()
    @media (max-width: 639px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}





