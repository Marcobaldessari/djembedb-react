.topbar
    position fixed
    width 100%
    height 56px
    top 0
    z-index 999
    background var(--topbar-color)
    backdrop-filter blur(10px)

    .btn-darktheme
        float right
        right 0
        margin-top 16px 
        border 0
        border-radius 100%
        background var(--bg-color)
        +mobile()
            margin-right 24px
        svg
            fill var(--note-color)

.topbar
    .logo
        display inline-block
        position relative

        .logotype
            display inline-block
            position absolute
            svg 
                fill var(--text-color)
                width 137px
            // +mobile()
            //     display none

        .logomark-wrapper
            display inline-block
            top 0
            margin 0
            position relative

        .logomark
            position relative
            display grid
            grid-template-columns repeat(4,1fr)
            grid-column-gap 4% 
            background var(--primary-color-regular)
            +desktop()
                // top -21px
                padding 7px
                margin 16px 16px 16px 0
                width 46px
                height 30px
                border-radius 10px
            +tablet()
                padding 7px
                margin 16px
                width 46px
                height 30px
                border-radius 10px
            &:hover
                cursor pointer


.logo-big
    .logotype
        display block
        +desktop()
            margin 40px auto 0px
        +tablet()
            margin 20px auto 0px
            width 200px
            height auto
        svg 
            fill var(--text-color)
            +tablet()
                width 200px
    .logomark
        text-align center
        display grid
        grid-template-columns repeat(4,1fr)
        grid-column-gap 4% 
        background var(--primary-color-regular)
        +desktop()
            padding 16px
            margin 0 auto 
            width 168px
            height 108px
            border-radius 35px
        +tablet()
            padding 10px
            margin 0 auto
            width 108px
            height 68px
            border-radius 20px
        &:hover
            cursor pointer

.logomark-note
    // width 16px
    // height 16px
    width 100%
    padding-top 100%
    border-radius 100%
    justify-self center
    &.Dun
        background var(--logo-note-color)
        align-self end
    &.Gun
        background var(--logo-note-color)
        align-self end
    &.Ca
        // outline  4px solid --bg-color
        position relative
        background var(--primary-color-regular)
        align-self start
        +desktop()
            box-shadow: inset 0 0 0 4px var(--logo-note-color)
        +tablet()
            box-shadow: inset 0 0 0 3px var(--logo-note-color)
        &::after
            content ""
            position absolute
            display block
            background var(--logo-note-color)
            border-radius 100%
            top 33%
            left 33%
            width 33%
            height 33%
    
