body
    --bg-color #fff    
    --text-color #222
    --logo-note-color #fff
    --note-color #000
    --notation-line-color #C8C8C8
    --notation-bg-color #F6F6F6
    --notation-bg-active-color #FAF0F3
    --primary-color-regular #FF5D8E
    --topbar-color rgba(255,255,255,.7)

    &.dark-theme
        --bg-color: #1F1B2B
        --text-color #fff
        --note-color #fff
        --logo-note-color #fff
        --notation-line-color #352C38
        --notation-bg-color #1D1A29
        --notation-bg-active-color #261B2B
        --primary-color-regular #FF705D
        --topbar-color rgba(31,27,43,.7)

html, body
    height 100%
    width 100%
    overflow-x hidden
    background var(--bg-color)
    

h1
h2
h3
h4
h5
h6
p
a
    font-family: 'Poppins', sans-serif;
    color var(--text-color)
    // &::selection
    //     background-color #F3F3F3
    //     color $blue
    //     text-decoration underline
    //     -webkit-tap-highlight-color rgba(0,0,0,0)



.container
    position relative
    margin 0 auto
    +desktop()
        width 80%
        max-width 900px
    +mobile()
        width 100%

.song-list
    margin-top 80px

.song-card
    width 100%
    position relative
    margin 0 auto
    display block
    height 172px

    .song-name
        position relative
        top 36px
        left 24px
        font-size 20px

    .btn-play
        font-weight: 700
        position absolute
        top 37px
        right 16px
        height 24px
        width 74px
        background var(--primary-color-regular)
        color white
        border-radius 40px
        border none
        
    .measure
        width 100%
        height 88px
        display grid
        grid-template-columns repeat(8, 1fr);

    .notation-frame
        display grid
        grid-template-columns repeat(2, 1fr);
        column-gap: 16px;
        position absolute
        padding 0 16px
        top 74px
        width 100%
        height 88px
        background var(--notation-bg-color)
        &:hover
            cursor pointer
        &.active
            background var(--notation-bg-active-color)
        &.active:after
            content: '';
            display: block;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            border: 2px solid var(--primary-color-regular)
            +desktop()
                border-radius: 5px;
            +tablet()
                border-radius: 0px;
                border-right none
                border-left none
        +tablet()
            border-radius 0
        +desktop()
            border-radius 10px
            
        .highlighted
            background: #FAF0F3;
            :after
                content: '';
                display: block;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                border-radius: 5px;
                border: 2px solid var(--primary-color-regular)

    .notation-note
        position relative
        align-items center
        align-self center
        width 100%
        height 100%

    .notation-horizontal-line
        position absolute
        height 1px
        width 100%
        background var(--notation-line-color)
        top 50%
        align-items center
        align-self center
    
    .notation-vertical-line
        position absolute
        height 50%
        width 4%
        top 25%
        left 48%
        background var(--notation-line-color)
        &.active
            background var(--primary-color-regular)

    .notation-note-circle
        position relative
        width 15px
        height 15px
        border-radius 50px
        background var(--text-color)
        margin 0 auto
        // box-shadow: 0 0 1px 0px white inset

    .Dun
        top 66%
    .Gun
        top 66%
    .do
        top 42%
    .go
        top 42%
    .Ta
        top 18%
    .Pa
        top 18%
    .Ca
        top 18%
        background var(--notation-bg-color)
        border 2px solid var(--text-color)
        &::after
            content ""
            width 3px
            height 3px
            left 4px
            top 4px
            position absolute
            background var(--text-color)
            border-radius 50px
    .xx
        display none

.active .Ca
    background #FAF0F3

