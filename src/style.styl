@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

// Media queries mixins
desktop()
    @media (min-width: 640px)
        {block}
tablet()
    @media (max-width: 639px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}

// Color tokens
$pink = #FF5D8E
$grey-bg = #F7F7F7

// Normalize
*
  margin 0
  padding 0

*,
*::after,
*::before {
	box-sizing: border-box;
}

html, body
    height 100%
    width 100%
    overflow-x hidden

h1
h2
h3
h4
h5
h6
p
a
    font-family: 'Poppins', sans-serif;
    // &::selection
    //     background-color #F3F3F3
    //     color $blue
    //     text-decoration underline
    //     -webkit-tap-highlight-color rgba(0,0,0,0)


  
.song-card
    position relative
    margin 0 auto
    display block
    width 100%
    // +desktop()
    max-width 640px
    height 172px

    .song-name
        position relative
        top 40px
        left 24px
        font-size 20px

    .btn-play
        position absolute
        // display inline-block
        top 37px
        right 16px
        height: 24px;
        width: 74px;
        background $pink
        color white
        border-radius: 40px;
        border none

    .notation-frame
        position absolute
        display block
        top 74px
        width 100%
        height 88px
        background $grey-bg
        +tablet()
            border-radius 0
        +desktop()
            border-radius 10px

