@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

// Media queries mixins
desktop()
    @media (min-width: 640px)
        {block}
tablet()
    @media (max-width: 639px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}

// Color tokens
$pink = #FF5D8E
$grey-bg = #F7F7F7
$black = #000

// Normalize
*
  margin 0
  padding 0

*,
*::after,
*::before {
	box-sizing: border-box;
}

html, body
    height 100%
    width 100%
    overflow-x hidden

h1
h2
h3
h4
h5
h6
p
a
    font-family: 'Poppins', sans-serif;
    // &::selection
    //     background-color #F3F3F3
    //     color $blue
    //     text-decoration underline
    //     -webkit-tap-highlight-color rgba(0,0,0,0)


  
.song-card
    position relative
    margin 0 auto
    display block
    width 100%
    // +desktop()
    max-width 640px
    height 172px

    .song-name
        position relative
        top 40px
        left 24px
        font-size 20px

    .btn-play
        position absolute
        top 37px
        right 16px
        height 24px
        width 74px
        background $pink
        color white
        border-radius 40px
        border none

    .notation-frame
        position absolute
        padding 0 16px
        display grid
        grid-template-columns repeat(16, 1fr);
        top 74px
        width 100%
        height 88px
        background $grey-bg
        &:hover
            background: #FAF0F3;
        &:hover:after
            content: '';
            display: block;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            border-radius: 5px;
            border: 2px solid $pink;
        +tablet()
            border-radius 0
        +desktop()
            border-radius 10px

         .highlighted
            background: #FAF0F3;
            :after
                content: '';
                display: block;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                border-radius: 5px;
                border: 2px solid $pink;


    .notation-note
        position relative
        align-items center
        align-self center
        width 100%
        height 100%

    .notation-horizontal-line
        position absolute
        height 1px
        width 100%
        background $black
        top 50%
        align-items center
        align-self center
    
    .notation-vertical-line
        position absolute
        height 50%
        width 4%
        top 25%
        left 48%
        background $black


    .notation-note-circle
        position relative
        width 15px
        height 15px
        border-radius 50px
        background $black
        margin 0 auto

    .Dun
        top 66%
    .Gun
        top 66%
    .do
        top 42%
    .go
        top 42%
    .Ta
        top 20%
    .Pa
        top 20%
    .x
        display none

